@model GameGalaxy.Models.Game

@{
    ViewData["Title"] = "Game Details";
}

<div class="container text-center">
    <h1>Game Details</h1>

    <div class="d-flex justify-content-center mb-4">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-height: 400px;" />
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Game</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-md-right">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4 text-md-right">
                            @Html.DisplayNameFor(model => model.Producer)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Producer)
                        </dd>
                        <dt class="col-sm-4 text-md-right">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-4 text-md-right">
                            @Html.DisplayNameFor(model => model.Rating)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Rating)
                        </dd>
                        <dt class="col-sm-4 text-md-right">
                            @Html.DisplayNameFor(model => model.ReleaseDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReleaseDate)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="GameList" class="btn btn-secondary">Back to List</a>
</div>

</div>
